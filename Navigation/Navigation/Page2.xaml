<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Navigation.Page2"
             Title="{Binding name}"
             xmlns:image1="clr-namespace:ImageCircle.Forms.Plugin.Abstractions;assembly=ImageCircle.Forms.Plugin">
    <ContentPage.Content>
        <StackLayout>
            <Label x:Name="name1" FontSize="25" FontAttributes="Bold" />
            <image1:CircleImage WidthRequest="100"
                                HeightRequest="100"
                                x:Name="images" />
            <Label x:Name="thongtin1"
                   FontSize="20"
                   TextColor="DarkGray" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>